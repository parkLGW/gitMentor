{
  "manifest_version": 3,
  "name": "GitMentor - GitHub Project Learning Assistant",
  "version": "0.1.0",
  "description": "Learn GitHub projects smarter: understand, use, and read source code in 5-10 minutes",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/popup/index.html"],
      "matches": ["https://github.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
